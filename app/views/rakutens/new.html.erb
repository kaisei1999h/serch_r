<div class="d-flex align-items-center">
  <h1>投稿</h1>
  <div class="ml-auto posts_button">
    <%= link_to '投稿一覧', rakutens_path, class: 'btn btn-outline-info' %>
  </div>
</div>
<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :item, value: @item_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :memo, 'メモ' %>
    <%= f.text_field :memo, class: 'form-control' %>
    <small id="feature-tip" class="form-text text-muted">
        メモを入力してください。
    </small>
  </div>

  <div class="form-group">
    <%= f.hidden_field :price, value: @item_price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :url, value: @item_url, class: 'form-control' %>
  </div>

  <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
  <small id="submit-tip" class="form-text text-muted">
    投稿する前に投稿内容を見直してください!
  </small>

<% end %>