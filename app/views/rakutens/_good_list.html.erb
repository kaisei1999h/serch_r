<% if @items.present? %>
  <% if @items == "キーワードを入力してください" %>
  <% else %>
    <table>
    <thead>
      <tr>
        <th class="url">画像</th>
        <th>商品名</th>
        <th>価格</th>
        <th>追加</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td class="img"><%= image_tag item["mediumImageUrls"][0]%></td>
          <td class="url"><%= link_to item.name, "#{item.url}" %></td>
          <td align="right"><%= number_with_delimiter(item.price) %>円</td>
          <td>
            <%= link_to "追加", new_rakuten_path(:item_name=>item.name, :item_url=>item.url,:item_price=>item.price),class: 'btn btn-outline-info'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
<% end %>
